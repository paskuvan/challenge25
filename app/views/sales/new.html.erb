<h1> Registro de ventas </h1><br><br>

<%= form_with model: Sale.new, url: sales_path, local: true, method: 'post' do |f| %>

<div class="col-md-12 field form-group">
  	<%= f.label :detail,  "Detalle de la venta:" %>
  	<div >
  		<%= f.text_area :detail, class: 'form-control' %> <br><br>
  	</div>
</div>


<div class="col-md-4 field form-group">
	<%= f.label :category, "CategorÃ­a:" %>
	<%= f.text_field :category, class: 'form-control' %><br><br>
</div>

<div class="col-md-4 field form-group">
	<%= f.label :value, "Valor:" %>
	<%= f.number_field :value, class: 'form-control' %><br><br>
</div>

<div class="col-md-4 field form-group">
	<%= f.label :discount, "Descuento:" %>
	<%= f.number_field :discount, class: 'form-control' %><br><br>
</div>

<div class="col-md-4 field form-check">
	<%= f.label :tax, "Exento de IVA:" %>
	<%= f.check_box :tax, class: 'form-check-input' %><br><br>
</div>

<div class="col-md-4 field form-group">
	<%= f.submit "Enviar", class: 'btn btn-primary btn-lg' %>
</div>

<% end %>
